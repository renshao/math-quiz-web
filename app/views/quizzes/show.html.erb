<div class="header">
  <span>QUIZ ID - <%= @quiz_id %></span>
  <span class="date"><%= Time.now.in_time_zone('Australia/Sydney').strftime("%^A, %d/%m/%Y") %></span>
  <span><%= @emojies.join(' â€¢ ') %></span>
</div>

<div class="questions-section">
  <% @questions[0, 30].each do |q| %>
    <div class="question">
      <%= q[0] %> <%= q[1] %> <%= q[2] %> =
      <% if params[:a] %>
        <span class="answer"><%= q[3] %></span>
      <% end %>
    </div>
  <% end %>
</div>

<div class="questions-section">
  <% @questions[30, 30].each do |q| %>
    <div class="question">
      <span class="number">
        <%= q[0].to_s.chars().map { |c| content_tag(:span, c) }.join.html_safe %>
      </span>
      <%= q[1] %>
      <span class="number">
        <%= q[2].to_s.chars().map { |c| content_tag(:span, c) }.join.html_safe %>
      </span>
      =
      <% if params[:a] %>
        <span class="answer"><%= q[3] %></span>
      <% end %>
    </div>
  <% end %>
</div>

